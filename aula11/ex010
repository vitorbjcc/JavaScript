<body>
    <h1>Sistema de Multas.</h1>
    <input type="number" name="vel" id="vel" placeholder="Km/H"> <br> <br>
    <input type="button" value="Continue" id="btn">
    <p id="res">Resultado</p>
    <script>
        function Verify() {
            var item = window.document.getElementById('vel')
            var velocidade = Number(item.value)
            if (velocidade > 60) {
                window.document.getElementById('res').innerHTML = `Andando em ${velocidade}km/h não é permitido. MULTADO!`
            } else {
                window.document.getElementById('res').innerHTML = `É permitido andar em ${velocidade}km/h.`
            }
        }
        window.document.getElementById('btn').addEventListener('click', Verify)
    </script>
